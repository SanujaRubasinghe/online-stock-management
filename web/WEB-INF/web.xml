    <servlet>
        <servlet-name>TestController</servlet-name>
        <servlet-class>com.stockmanager.controller.TestController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUserServlet</servlet-name>
        <servlet-class>com.stockmanager.User.controller.AddUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowUsersServlet</servlet-name>
        <servlet-class>com.stockmanager.User.controller.ShowUsersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.stockmanager.User.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.stockmanager.User.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUserServlet</servlet-name>
        <servlet-class>com.stockmanager.User.controller.DeleteUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowAddUserFormServlet</servlet-name>
        <servlet-class>com.stockmanager.User.controller.ShowAddUserFormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUserGroupServlet</servlet-name>
        <servlet-class>com.stockmanager.User.controller.AddUserGroupServlet</servlet-class>
