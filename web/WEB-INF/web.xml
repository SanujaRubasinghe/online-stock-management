        <servlet-class>com.stockmanager.User.controller.SessionListener</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OnlineUsersServlet</servlet-name>
        <servlet-class>com.stockmanager.User.controller.OnlineUsersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderController</servlet-name>
        <servlet-class>com.stockmanager.Order.controller.OrderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductController</servlet-name>
        <servlet-class>com.stockmanager.Product.controller.ProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardController</servlet-name>
        <servlet-class>com.stockmanager.Dashboard.controller.DashboardController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/add-user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowUsersServlet</servlet-name>
        <url-pattern>/show-users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUserServlet</servlet-name>
        <url-pattern>/delete-user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowAddUserFormServlet</servlet-name>
        <url-pattern>/add-user-form</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUserGroupServlet</servlet-name>
        <url-pattern>/add-group</url-pattern>
    </servlet-mapping>
